@model IEnumerable<PizzaSquare.Web.Models.StorePizzaViewModel>

@{
    ViewData["Title"] = "Menu";
}

    <h1>@Html.DisplayFor(m => m.First().StoreName )</h1>

<p>
    <a asp-action="Custom">Create Your Own</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PizzaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crust)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sauce)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cheese)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Toppings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Crust)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sauce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cheese)
            </td>
            <td>
                <ul>
                    @foreach (var topping in item.Toppings)
                    {
                        <li>@topping</li>
                    }
                </ul>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <form asp-action="Preset">
                    <input type="submit" value="Add to order" class="btn btn-primary" />
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
